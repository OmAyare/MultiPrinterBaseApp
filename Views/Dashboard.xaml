<UserControl
    x:Class="BaseApp.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:WpfHelpers.Resources.Converters;assembly=WpfHelpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ei="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:BaseApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Converters:InvertValueVisibilityConverter x:Key="InvertValueVisibilityConverter" />
        <Converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <Style x:Key="DisabledButtonStyle" TargetType="Button"  >
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                    <Setter Property="Background" Value="Gray" />
                    <Setter Property="Foreground" Value="DarkGray" />

                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <Grid Background="#ecf0f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Height="50"
            Background="#222d32">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="False">
                <Button
                    Margin="10,0,0,0"
                    DockPanel.Dock="Left"
                    Style="{DynamicResource TransparentButton}">
                    <Button.Content>
                        <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="5,0,5,0"
                                HorizontalAlignment="Left"
                                FontSize="14"
                                Style="{DynamicResource FontAwesome}"
                                Text="&#xf0e4;" />
                        </StackPanel>
                    </Button.Content>
                </Button>
                <TextBlock
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    FontSize="16"
                    Foreground="#fff"
                    Style="{DynamicResource Roboto}"
                    Text=" Printing Module" />
                <TextBlock
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"
                    FontSize="16"
                    Foreground="#fff"
                    Style="{DynamicResource Roboto}"
                    Text=" " />
                <!--<TextBlock Text="{Binding CurrentUser,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Style="{ DynamicResource Roboto}" FontSize="16" Foreground="#fff"  DockPanel.Dock="Right" VerticalAlignment="Center"/>
                    <TextBlock Text="Welcome : " Style="{ DynamicResource Roboto}" FontSize="16" Foreground="#fff"  DockPanel.Dock="Right" VerticalAlignment="Center"/>-->

            </DockPanel>
        </Border>
        <Border
            Grid.Row="1"
            Padding="15,15,15,0"
            VerticalAlignment="Stretch"
            Background="#ecf0f5">
            <Grid Background="White">
                <Border
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Background="#fff"
                    BorderBrush="#222d32"
                    BorderThickness="0,3,0,0">
                    <StackPanel Orientation="Vertical">
                        <Border
                            Padding="10"
                            BorderBrush="#f4f4f4"
                            BorderThickness="0,0,0,1">
                            <DockPanel LastChildFill="False">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    LineHeight="1"
                                    Text="Dashboard" />

                            </DockPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <!--<ListBox ItemsSource="{Binding Settings}" Margin="10" Grid.Row="2">
            <ListBox.ItemTemplate>
                <DataTemplate>-->
        <ListView x:Name="listView" ItemsSource="{Binding Settings}" Margin="10" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10" Padding="10" Background="#fff">
                        <StackPanel Orientation="Horizontal">                       
                            <TextBlock Text="{Binding PName}" Width="60" Margin="4" FontWeight="SemiBold" TextAlignment="Center" FontSize="15" />

                            <TextBox MinWidth="200"  Text="{Binding Path=BindingContext.filepath, UpdateSourceTrigger=PropertyChanged ,RelativeSource={RelativeSource AncestorType=ListView}}"  />
                            <Button  Command="{Binding DataContext.OpenFileDialog, RelativeSource={RelativeSource AncestorType=ListView}}" Content="Browse" />
       
                            <Label Content="Select Template" FontSize="12" FontWeight="Bold" />
                            <ComboBox ItemsSource="{Binding DataContext.Templates , RelativeSource={RelativeSource AncestorType=ListView}}" SelectedItem="{Binding DataContext.SelectedTemplate, Mode=TwoWay}">
                            </ComboBox>

                            <Button  Command="{Binding DataContext.StartCommand, Source={x:Reference listView}}" Content="Start" Margin="40,0,10,0" Background="MediumSeaGreen" Foreground="White" IsEnabled="{Binding DataContext.IsStartButtonEnabled, Source={x:Reference listView}}" Style="{StaticResource DisabledButtonStyle}" Width="50" CommandParameter="{Binding Port}"/>
                            <Button  Command="{Binding DataContext.StopCommand, Source={x:Reference listView}}" Content="Stop" Background="IndianRed" Foreground="White" IsEnabled="{Binding DataContext.IsStopButtonEnabled, Source={x:Reference listView}}" Style="{StaticResource DisabledButtonStyle}" Width="50" CommandParameter="{Binding Port}" />
                            
                            <Button Command="{Binding DataContext.ConnectCommand, Source={x:Reference listView}}" Content="Connect" Margin="130,0,0,0 "  CommandParameter="{Binding Port}" />
                            <Button  Command="{Binding DataContext.SendCommand, Source={x:Reference listView}}" Content="Send"  CommandParameter="{Binding Port}" />


                            <TextBox Width="45" Text="{Binding DataContext.PrintedRowCount, RelativeSource={RelativeSource AncestorType=ListView}, UpdateSourceTrigger=PropertyChanged}" FontWeight="SemiBold" TextAlignment="Center" FontSize="15" />
                        </StackPanel>   
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--</DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->
    </Grid>
</UserControl>